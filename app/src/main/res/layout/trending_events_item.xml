<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/eventsCard"
        style="@style/cardviewStyle"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:elevation="5dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/trendingEventsContentImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/kid"
                android:tint="#6F000000" />

            <TextView
                android:id="@+id/trendingEventsTitle"
                style="@style/textstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trendingEventsDate"
                style="@style/textstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trendingEventsTitle"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trendingEventsKnowMore"
                style="@style/textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:text="Know More"
                android:textColor="@color/white" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>