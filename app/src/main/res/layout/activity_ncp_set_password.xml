<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/parentContainer"
    tools:context="com.nconnect.teacher.activity.NcpSetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:src="@drawable/ncp_logo_yellow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="WELCOME TO NCONNECT"
            android:textColor="@color/orange_yelloew"
            android:textSize="18sp" />

        <FrameLayout
            android:id="@+id/setPasswordContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Kindly Set your password"
                    android:textColor="#9b9b9b"
                    android:textSize="16sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="47dp"
                    android:layout_marginRight="40dp"
                    android:hint="New Password"
                    android:textColorHint="#9d9d9d">

                    <EditText
                        android:id="@+id/newPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="#4a4a4a"
                        android:inputType="textPassword"
                        android:textColorHint="#9d9d9d"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="#cccccc">

                </TableRow>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/hintWrongPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="47dp"
                    android:layout_marginRight="40dp"
                    android:textColorHint="#9d9d9d">

                    <EditText
                        android:id="@+id/confirmNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Confirm new Password"
                        android:inputType="textPassword"
                        android:textColor="#4a4a4a"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <TableRow
                    android:id="@+id/lineWrongpassword"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="#cccccc">

                </TableRow>

                <TextView
                    android:id="@+id/messageWrongPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:drawableRight="@drawable/ncp_error"
                    android:gravity="center|left"
                    android:text="Confirm new password is incorrect"
                    android:textColor="@color/error"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnSetPasswordNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="74dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="100dp"
                    android:background="@drawable/ncp_button_back_default"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>