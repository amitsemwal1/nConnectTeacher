<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/announcmentCard"
        style="@style/cardviewStyle"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trendingAnnouncementTitle"
                style="@style/textstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vertical_gradient_announcement"
                android:padding="10dp"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/trendingAnnouncementContent"
                style="@style/textstyle"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:maxLines="4"
                android:paddingLeft="10dp"
                android:ellipsize="end"
                android:textSize="14sp" />

            <TextView
                android:visibility="visible"
                android:id="@+id/trendingAnnouncementMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:text="@string/more"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/trendingAnnoucementPostedBy"
                style="@style/textstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#aaa"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>